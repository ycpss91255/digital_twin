<?xml version="1.0" encoding="utf-8"?>
<launch>
<arg name="robot_ns" default="/digital_twin/robot"/>

  <!-- <group ns="$(arg robot_ns)"> -->
    <!-- model name -->
    <arg name="model_name" default="omwr"/>

    <!-- Robot pose -->
    <arg name="x" default="0"/>
    <arg name="y" default="0"/>
    <arg name="z" default="0.147765"/>
    <arg name="roll" default="3.140666"/>
    <arg name="pitch" default="0"/>
    <arg name="yaw" default="0"/>

    <!-- Load the URDF into the ROS Parameter Server -->
    <!--Note:robot_description $(find pkg) need to be modified manually -->
    <param name="robot_description"
      command="$(find xacro)/xacro '$(find model)/$(arg model_name)/xacro/$(arg model_name).xacro'" />

    <!-- Run a python script to the send a service call to gazebo_ros to spawn a URDF robot -->
    <node name="urdf_spawner"
      pkg="gazebo_ros"
      type="spawn_model"
      respawn="false"
      output="screen"
      args="-urdf -model $(arg model_name) -robot_namespace $(arg robot_ns) -param robot_description -x $(arg x) -y $(arg y) -z $(arg z) -R $(arg roll) -P $(arg pitch) -Y $(arg yaw) " />
    <!-- </group> -->
</launch>
